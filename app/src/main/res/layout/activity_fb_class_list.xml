<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FbClassList"
    android:background="@drawable/bgcolor">


    <ListView
        android:id="@+id/FbGroupListView"
        android:layout_width="wrap_content"
        android:layout_height="402dp"
        android:layout_below="@+id/FbBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/edittext_design" />

    <Button
        android:id="@+id/FbBtn"
        android:layout_width="341dp"
        android:layout_height="57dp"
        android:layout_below="@+id/FbSectionSpinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:text="View FB Groups" />

    <Spinner
        android:id="@+id/FbSectionSpinner"
        android:layout_width="323dp"
        android:layout_height="46dp"
        android:layout_below="@+id/FbYearSpinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
         />

    <Spinner
        android:id="@+id/FbYearSpinner"
        android:layout_width="323dp"
        android:layout_height="46dp"
        android:layout_below="@+id/FbLearningSpinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp" />

    <Spinner
        android:id="@+id/FbLearningSpinner"
        android:layout_width="330dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp" />

</RelativeLayout>